        <ComboBox x:Name="Dropdown_Vereniging2" Margin="180,56,0,0" VerticalAlignment="Top" Grid.Column="2" Height="25" HorizontalAlignment="Left" Width="78" SelectionChanged="comboBox_SelectionChanged"/>
        <ComboBox x:Name="Dropdown_Team2" Margin="180,140,0,0" VerticalAlignment="Top" Grid.Column="2" Height="25" HorizontalAlignment="Left" Width="78" SelectionChanged="comboBox_SelectionChanged"/>

    </Grid>
</Window>
